{{!-- Login Page --}}
<div class="blog_banner">
    <div class="blog_banner">
        <h2>Enlightened Only</h2>
    </div>
</div>

<section class="section container">
    <div class="row">
        <form class="col s12 m8 offset-m2 l6 offset-l3" action="/login" method="post">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="alice@wonderland.com" id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="**********" id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 center-align">
                    <button type="submit" class="waves-effect waves-light btn-large #2d637f">Log In</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col s12 center-align">
                <p>New Initiate</p>
                <a href="/signup" class="waves-effect waves-light btn #2d637f" id="new_user">See how far the rabbit hole goes!</a>
            </div>
        </div>
    </div>
</section>
